extends ../layout

block content
    .container
        .row
            table.table.table-hover.table-bordered.table-responsive.table-striped
                thead
                  tr
                    th 电影名称
                    th 导演
                    th 国家
                    th 上映年份
                    th 录入时间
                    th 查看
                    th 更新
                    th 删除
                  tbody
                      each item in movies
                       tr(class='item-id-#{item._id}')
                        td #{item.title}
                        td #{item.director}
                        td #{item.country}
                        td #{item.year}
                        td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
                        td: a(target='_blank',href='../detail/#{item._id}') 查看
                        td: a(target='_blank',href='../admin/update/#{item._id}') 更新
                        td: button.del.btn.btn-danger.btn-sm(type='button',data-id='#{item._id}') 删除
    script(src='/javascript/list.js')